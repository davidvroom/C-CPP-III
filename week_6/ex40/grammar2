%target-directory parser
%filenames parser 
%scanner ../scanner/scanner.h 

%token NUMBER
// the way bisonc++ solves the shift/reduce conflict 
%right '+' '-'      
    
%%

lines:
    lines line
|
    line
;

line:
    expr '\n'
    {
        std::cout << $1 << '\n';
    }
;

expr:
    NUMBER
    {
        $$ = std::stod(d_scanner.matched());
    }
|
    expr '+' expr
    {
        $$ = $1 + $3;
    }
|
    expr '-' expr
    {
        $$ = $1 - $3;
    }
;

