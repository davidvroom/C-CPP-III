%target-directory = "scanner"
%filenames = "scanner"


unaryOp			\+\+|--|()|[]
relationalOp	==|!=|<=|>=|&&|\|\|
assignOp		\+=|-=|*=|/=|%=|>>=|<<=|&=|^=|\|=
otherOp			::|->|.*|->*|<<|>>



%%

[[:blank:]]	    		// ignore 

unaryOp					|
relationalOp			|
assignOp				|
otherOp 				return OPERATOR;
[a-zA-Z_][a-zA-Z_0-9]* 	return IDENT;
[0-9]+					return INTEGRAL;
[0-9]+\.[0-9]+			return DOUBLE;
'[^[:space:]]'			return matched()[1];
\n$						|
.		 				return matched()[0];
